<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">







        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:onClick="submitForm"
            app:backgroundTint="@color/primary_dark"
            android:src="@drawable/ic_send_white_24dp"
            app:layout_anchor="@+id/viewA"
            app:layout_anchorGravity="bottom|right|end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/snackLayout"
            android:orientation="vertical">
            <include layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></include>

            <LinearLayout
                android:id="@+id/viewA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@color/primary"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textİnsertTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Görev Ekleyin"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/insert_title_size"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/viewB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@color/icons"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/items_margin_top">

                    <ImageView
                        android:id="@+id/imgEditText"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_text_format_black_48dp" />

                    <EditText
                        android:id="@+id/headerEditText"
                        style="@style/AppTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/items_margin_left"
                        android:layout_marginTop="@dimen/items_margin_top"
                        android:layout_toRightOf="@+id/imgEditText"
                        android:hint="@string/task_title"
                        android:textColor="@color/secondary_text" />

                    <ImageView
                        android:id="@+id/imgEditTextContent"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_below="@+id/imgEditText"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_mode_edit_black_24dp" />

                    <EditText
                        android:id="@+id/contentEditText"
                        style="@style/AppTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/headerEditText"
                        android:layout_marginLeft="@dimen/items_margin_left"
                        android:layout_marginTop="@dimen/items_margin_top"
                        android:layout_toRightOf="@+id/imgEditText"
                        android:hint="@string/task_content"
                        android:textColor="@color/secondary_text" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_below="@+id/imgEditTextContent"
                        android:layout_marginTop="20dp"
                        android:id="@+id/imgİmportance"
                        android:src="@drawable/ic_priority_high_black_24dp" />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_toRightOf="@+id/imgİmportance"
                        android:id="@+id/radioGroup"
                        android:layout_below="@+id/contentEditText"
                        android:onClick="radioGroupListener"
                        android:layout_marginLeft="@dimen/items_margin_left">
                        <RadioButton
                            android:id="@+id/radioHigh"
                            style="@style/AppTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/contentEditText"
                            android:layout_marginTop="@dimen/items_margin_top"
                            android:layout_toRightOf="@+id/imgEditTextContent"
                            android:checked="true"
                            android:text="Yüksek" />

                        <RadioButton
                            android:id="@+id/radioNormal"
                            style="@style/AppTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/contentEditText"
                            android:layout_marginLeft="@dimen/items_margin_left"
                            android:layout_marginTop="@dimen/items_margin_top"
                            android:layout_toRightOf="@+id/radioHigh"
                            android:text="Normal" />

                        <RadioButton
                            style="@style/AppTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/contentEditText"
                            android:layout_marginLeft="@dimen/items_margin_left"
                            android:layout_marginTop="@dimen/items_margin_top"
                            android:id="@+id/radioLow"
                            android:layout_toRightOf="@+id/radioNormal"
                            android:text="Düşük" />
                    </RadioGroup>


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/buttonSetDate"
                        android:layout_below="@+id/radioGroup"
                        android:layout_marginTop="@dimen/items_margin_top"
                        android:background="@color/accent"
                        android:text="@string/pick_date"
                        android:textStyle="bold"
                        android:onClick="pickDateTime"
                        android:textColor="@color/icons"
                        android:layout_centerHorizontal="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtDate"
                        android:textStyle="bold"
                        android:visibility="invisible"
                        android:textColor="@color/secondary_text"
                        android:layout_marginTop="@dimen/items_margin_top"
                        android:layout_below="@id/buttonSetDate"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>




</android.support.design.widget.CoordinatorLayout>